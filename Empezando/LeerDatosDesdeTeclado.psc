Algoritmo LeerDatosDesdeTeclado
	
	// DEFIMOS NUESTRAS VARIABLE
	Definir nombre Como Caracter;
	Definir edad Como Entero;
	
	// Comando Leer 
	Escribir "Ingresa tu nombre: ";
	Leer nombre;
	Escribir "Ingresa tu edad: ";
	Leer edad;
	
	// MOSTRAMOS EN PANTALLA EL NOMBRE Y LA EDAD DEL USUARIO
	Escribir "Hola " , nombre , " Tu edad es: " , edad;
	
FinAlgoritmo
